<!-- Delete Modal -->
<div class="modal fade stockPaymentmodal" id="stocksPaymentModal{{supplier.id}}"
     tabindex="-1" role="dialog"
     aria-labelledby="stocksPaymentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    {{ 'stock.payment.stocksModal.title'|trans({},'messages',app.session.get('_locale')) }}
                </h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                <table class="table table-striped" style="width: 100%;">
                    <thead class="font-weight-bold">
                        <th class="not-sort">
                            {{ 'stock.payment.stocksModal.tr_date'|trans({},'messages',app.session.get('_locale')) }}
                        </th>
                        <th>
                            {{ 'stock.payment.stocksModal.tr_amount'|trans({},'messages',app.session.get('_locale')) }}
                        </th>
                        <th>
                            {{ 'stock.payment.stocksModal.tr_recorder'|trans({},'messages',app.session.get('_locale')) }}
                        </th>
                    </thead>
                    <tbody>
                    {% for stockPayment in stockPayments%}
                        <tr>
                            <td>
                                <a href="{{ path('stock_detail',{id:stockPayment.stock.id}) }}">
                                    {{ stockPayment.addDate|longDate }}
                                </a>
                            </td>
                            <td>{{ stockPayment.amount|formated }}</td>
                            <td class="text-capitalize">
                                {{ stockPayment.recorder.name}}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">
                    {{ 'cancel'|trans({},'messages',app.session.get('_locale')) }}
                </button>
            </div>
        </div>
    </div>
</div>
