                updateBarChart(dataProfit, loadBarProfit);

            });

            $('#btnForBarChartRate').click(function (event) {
                event.preventDefault();
                const year_bar = parseInt($('#year_bar_rate').val());

                const dataRate = saleByYearRate(salesRate, year_bar)
                    .map(sale => {
                        return sale.amount
