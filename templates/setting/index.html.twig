{% extends 'base.html.twig' %}

{% block title %}{{ 'setting.index.title'|trans({},'messages',app.session.get('_locale')) }}{% endblock %}
{% block stylesheets %}
    <style>
        .theme.Selected {
            padding-bottom: 5px;
            border: #000 2px solid;
        }
    </style>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            $(".theme-icon").hide();

            if ($(".theme").hasClass('Selected')){
                $(".theme.Selected").children('.theme-icon').show();
            }
            $(".theme").click( function() {
                $(".theme").removeClass("Selected");
                $(".theme-icon").hide();
                $(this).addClass("Selected");
                $(this).children('.theme-icon').show();

                $("#themeId").val($(this).attr('data-value'));
            });
        });

    </script>
{% endblock %}
