<!-- Delete Modal -->
<div class="modal fade salePaymentmodal" id="salesPaymentModal{{customer.id}}"
     tabindex="-1" role="dialog"
     aria-labelledby="salesPaymentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    {{ 'sale.payment.salesModal.title'|trans({},'messages',app.session.get('_locale')) }}
                </h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                <table class="table table-striped" style="width: 100%;">
                    <thead class="font-weight-bold">
                        <th class="not-sort">
                            {{ 'sale.payment.salesModal.tr_sale'|trans({},'messages',app.session.get('_locale')) }}
                        </th>
                        <th class="not-sort">
                            {{ 'sale.payment.salesModal.tr_date'|trans({},'messages',app.session.get('_locale')) }}
                        </th>
                        <th>
                            {{ 'sale.payment.salesModal.tr_amount'|trans({},'messages',app.session.get('_locale')) }}
                        </th>
                        <th>
                            {{ 'sale.payment.salesModal.tr_recorder'|trans({},'messages',app.session.get('_locale')) }}
                        </th>
                    </thead>
                    <tbody>
                    {% for salePayment in salePayments%}
                        <tr>
                            <td>
                                <a href="{{ path('sale_detail',{id:salePayment.sale.id}) }}">
                                    {{ salePayment.sale.code }}
                                </a>
                            </td>
                            <td>{{ salePayment.addDate|longDate }}</td>
                            <td>{{ salePayment.amount|formated }}</td>
                            <td class="text-capitalize">
                                {{ salePayment.recorder.name}}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">
                    {{ 'cancel'|trans({},'messages',app.session.get('_locale')) }}
                </button>
            </div>
        </div>
    </div>
</div>
